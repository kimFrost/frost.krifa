doctype html
html(lang="da")
	head
		title Krifa
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1")

		style.
			.myplayer {
				position: absolute;
				left: 50%;
				margin-left: -150px;
			}
			.myplayer.adform-video-full-screen-on {
				left: 0;
				top: 0;
				margin-left: 0;
			}
			.adform-video-play-pause,
			.adform-video-rewind,
			.adform-video-stop,
			.adform-video-seek-bar,
			.adform-video-sound,
			.adform-video-full-screen {
				display: none;
			}
			html,
			body {
				position: relative;
				margin: 0;
				width: 100%;
				height: 100%;
			}
			.logo {
				background-image: url('./images/graphic/krifa-logo.png');
				background-size: contain;
				background-repeat: no-repeat;
				background-position: 50% 0;
				position: absolute;
				z-index: 10;
				top: 10px;
				right: 10px;
				width: 15%;
				height: 100%;
				height: calc(100% - 20px);
			}
	body
		script.
			var preloadQueue = [
				'VideoPlayer'
			];
			document.write('<script src="' + (window.API_URL || 'http://s1.adform.net/banners/scripts/rmb/Adform.DHTML.js?bv=' + Math.random()) + '"><\/script>');

		block body

		block globalVars
			- var bannerClasses = "banner";
		section.banner
			block content

		div.logo

